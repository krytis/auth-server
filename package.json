{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "An authentication server designed to work with the Krytis ecosystem.",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "npm run lint && npm run build && jest",
    "build": "tsc",
    "start": "npm run build && node -r dotenv/config dist/app.js"
  },
  "repository": "github:krytis/auth-server",
  "author": "Annika L. <annika0uwu@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.4.0",
    "@types/pg": "^8.6.1",
    "argon2": "^0.28.2",
    "better-sqlite3": "^7.4.3",
    "dotenv": "^10.0.0",
    "fastify": "^3.21.0",
    "json-schema-to-ts": "^1.6.4",
    "pg": "^8.7.1",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@krytis/eslint-config": "^0.1.0",
    "@pkmn/eslint-config": "^1.5.1",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.1.0",
    "pg-mem": "^1.9.17",
    "ts-jest": "^27.0.5"
  },
  "eslintConfig": {
    "extends": "@krytis"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/*.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
